<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.codeanywhere.openread"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.codeanywhere.openread.activity.WelcomeActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="org.codeanywhere.openread.activity.MainActivity"
			android:configChanges="keyboardHidden|orientation"
			android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"
			android:alwaysRetainTaskState="true"
			android:launchMode="singleTask">             
        </activity>
        <activity
            android:name="org.codeanywhere.openread.activity.SlidingActivity"
			android:configChanges="keyboardHidden|orientation"
			android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"
			android:alwaysRetainTaskState="true"
			android:launchMode="singleTask">             
        </activity>
        <activity
            android:name="org.codeanywhere.openread.activity.PullToRefreshViewActivity"
			android:configChanges="keyboardHidden|orientation"
			android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"
			android:alwaysRetainTaskState="true"
			android:launchMode="singleTask">             
        </activity>
        <activity
            android:name="org.codeanywhere.openread.activity.TestGridView"
			android:configChanges="keyboardHidden|orientation"
			android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"
			android:alwaysRetainTaskState="true"
			android:launchMode="singleTask">             
        </activity>
        <activity
            android:name="org.codeanywhere.openread.activity.TestListView"
			android:configChanges="keyboardHidden|orientation"
			android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"
			android:alwaysRetainTaskState="true"
			android:launchMode="singleTask">             
        </activity>
        <activity
            android:name="org.codeanywhere.openread.activity.TestScrollView"
			android:configChanges="keyboardHidden|orientation"
			android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"
			android:alwaysRetainTaskState="true"
			android:launchMode="singleTask">             
        </activity>
        <activity
            android:name="org.codeanywhere.openread.activity.SubscribActivity"
			android:configChanges="keyboardHidden|orientation"
			android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"
			android:alwaysRetainTaskState="true"
			android:launchMode="singleTask">             
        </activity>
    </application>

</manifest>